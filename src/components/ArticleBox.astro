---
const {articleHeader, articleLink} = Astro.props;
---

<div class="article-box">
    <div class="article-image">
		<img src="data:image/svg+xml;base64," alt="Logo jeden do jeden dla artykuÅ‚u." class="article-image-img">
	</div>
    <div class="article-text">
        <span class="article-text-span">
            <a href={articleLink} class="article-link">{articleHeader}</a>
        </span>
    </div>
</div>

<style>
    .article-box{
		width: calc(67rem / 3 - 15px);
		height: 20.6rem;
	}
	.article-image{
		aspect-ratio: 1/1;
	}
	.article-image-img{
		width: 100%;
		height: 100%;
	}
	.article-text{
		width: max-content;
		transform: translateY(-100%);
		overflow-wrap: break-word;
		overflow:hidden;
		font-weight: 550;
		padding-bottom: 5px;
		margin-left: 10px;
	}
	.article-text-span{
		font-size: 2rem;
	}
	.article-link{
		text-decoration: none; color: #363636;
	}
	.article-link:hover{
		color: #111010;
	}
	@media screen and (min-width: 600px){
		.article-box{
			width: 23rem;
			height: 20.6rem;
		}
		.article-text-span{
			font-size: 2rem;
		}
	}
	@media screen and (max-width: 600px){
		.article-box{
			width: calc(67rem / 3);
			height: 20.6rem;
		}
	}
	@media screen and (min-width: 900px){
		.article-text-span{
			font-size: 2rem;
		}
	}
	@media screen and (max-width: 450px){
		.article-box{
			width: 70vw;
			height: 20.6rem;
		}
		.article-text-span{
			font-size: 2.5rem; margin-left: 10px;
		}
	}
</style>
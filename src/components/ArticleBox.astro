---
const {articleHeader, articleLink} = Astro.props;
---

<div class="article-box">
    <div class="article-image">
		<!-- <img alt="Logo jeden do jeden dla artykuÅ‚u." class="article-image-img" src="data:image/svg+xml;base64," /> -->
		<span style="font-size: 5.3rem; border-radius: 100%; padding: 1.3em; background-color: hsl(0, 0%, 31%); width: 30px; height: 30px; display: flex; align-items: center; justify-content: center;
		 color: var(--d-background-color);">D</span>
	</div>
    <div class="article-text">
        <span class="article-text-span" style="background-color: hsl(0, 0%, 31%); border-radius: 1em; padding: 13px 20px;">
            <a href={articleLink} class="article-link">{articleHeader}</a>
        </span>
    </div>
</div>

<style>
    .article-box{
		width: calc(67rem / 3 - 15px);
		height: 20.6rem;
	}
	.article-image{
		aspect-ratio: 1/1;
		translate: -5%;
		display: flex;
		justify-content: center;
		align-items: center;
	}
	.article-image-img{
		width: 100%;
		height: 87%;
	}
	.article-text{
		width: max-content;
		transform: translateY(-80%);
		overflow-wrap: break-word;
		font-weight: 550;
		margin-left: 10px;
	}
	.article-text-span{
		font-size: 1.6rem;
	}
	.article-link{
		text-decoration: none; color: var(--d-background-color);
	}
	.article-link:hover{
		color: #111010;
	}
	@media screen and (min-width: 600px){
		.article-box{
			width: 23rem;
			height: 20.6rem;
		}
		.article-text-span{
			font-size: 2rem;
		}
	}
	@media screen and (max-width: 600px){
		.article-box{
			width: calc(67rem / 3);
			height: 20.6rem;
		}
	}
	@media screen and (min-width: 900px){
		.article-text-span{
			font-size: 1.6rem;
		}
	}
	@media screen and (max-width: 450px){
		.article-box{
			width: 100%;
			height: 20.6rem;
		}
		.article-text-span{
			font-size: 2.2rem;
		}
	}
</style>